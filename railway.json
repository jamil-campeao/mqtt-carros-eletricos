{
  "$schema": "https://railway.app/railway.schema.json",
  "services": [
    {
      "name": "api-service",
      "build": {
        "builder": "DOCKERFILE",
        "dockerfilePath": "./Dockerfile"
      },
      "deploy": {
        "startCommand": "uvicorn api.main:app --host 0.0.0.0 --port $PORT"
      },
      "env": {
        "MOSQUITTO_HOST": "mosquitto-broker",
        "MOSQUITTO_PORT": "1883"
      }
    },
    {
      "name": "mosquitto-broker",
      "build": {
        "builder": "DOCKERFILE",
        "dockerfilePath": "./mosquitto.Dockerfile"
      }
    }
  ]
}
